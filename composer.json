{
    "name": "mervynfoxe/mervyn.online",
    "type": "project",
    "description": " Mervyn's very own website. ",
    "keywords": ["laravel"],
    "authors": [
        {
            "name": "Mervyn Fox",
            "homepage": "https://mervyn.online/",
            "role": "Developer"
        }
    ],
    "homepage": "https://mervyn.online/",
    "funding": [
        {
            "type": "paypal",
            "url": "https://paypal.me/AMVPh34r"
        },
        {
            "type": "cashapp",
            "url": "https://cash.app/$MervynFoxe"
        },
        {
            "type": "kofi",
            "url": "https://ko-fi.com/mervyn"
        }
    ],
    "license": "GPL-3.0-only",
    "require": {
        "php": "^8.3",
        "ext-gd": "*",
        "andreiio/blade-remix-icon": "^3.5",
        "davidhsianturi/blade-bootstrap-icons": "^1.5",
        "laravel/framework": "^11.0",
        "laravel/pail": "^1.2",
        "laravel/tinker": "^2.9",
        "league/flysystem-aws-s3-v3": "^3.0",
        "league/flysystem-path-prefixing": "^3.0",
        "prezet/prezet": "^1.1",
        "spatie/laravel-feed": "^4.4"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^3.5",
        "fakerphp/faker": "^1.23",
        "laravel/pint": "^1.13",
        "laravel/sail": "^1.26",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.0",
        "phpunit/phpunit": "^10.5",
        "roave/security-advisories": "dev-latest",
        "spatie/laravel-ignition": "^2.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "@php artisan ide-helper:generate",
            "@php artisan ide-helper:meta"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
